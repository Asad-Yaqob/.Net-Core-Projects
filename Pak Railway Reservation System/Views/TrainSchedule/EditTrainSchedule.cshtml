@model TrainSchedule
@{
    ViewData["Title"] = "EditTrainSchedule";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="section-header">
    <h3>Edit Train Schedules</h3>
</div>

@if (ViewBag.ErrMsg != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong></strong> @ViewBag.ErrMsg
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="section-body">
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input  type="hidden" asp-for="TrainScheduleId"/>
            <div class="form-group">
                <label asp-for="TrainName"></label>
                    <select class="form-control" asp-for="TrainName">
                        <option value="">Choose Train</option>
                        @foreach (var item in ViewBag.trainName)
                        {
                            <option value="@item">@item</option>
                        }
                    </select>
                <span asp-validation-for="TrainName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Frome"></label>
                    <select class="form-control" asp-for="Frome" asp-items="@ViewBag.stationName">
                    <option value="">Starting Destination</option>
                </select>
                <span asp-validation-for="Frome"></span>
            </div>
            <div class="form-group">
                <label asp-for="To"></label>
                    <select class="form-control" asp-for="To" asp-items="@ViewBag.stationName">
                    <option value="">Ending Destination</option>
                </select>
                <span asp-validation-for="To"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date"></label>
                <input class="form-control" asp-for="Date" id="date" />
                <span asp-validation-for="Date"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time"></label>
                <input class="form-control" asp-for="Time" />
                <span asp-validation-for="Time"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-success">Save Changes</button> <a asp-action="TrainSchedules" class="btn btn-primary">Go Back</a>
            </div>
        </form>
    </div>
</div>
</div>

