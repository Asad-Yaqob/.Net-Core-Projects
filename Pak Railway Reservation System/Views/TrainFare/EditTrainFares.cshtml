@model EditTrainFare
@{
    ViewData["Title"] = "EditTrainFare";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="section-header">
    <h3>Edit Train Fare</h3>
</div>

@if (ViewBag.ErrMsg != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error!</strong> @ViewBag.ErrMsg
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="section-body">
    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <input type="hidden" asp-for="TrainFareId" />
                <div class="form-group">
                    <label asp-for="Fare"></label>
                     <input type="number" class="form-control" asp-for="Fare" />
                    <span asp-validation-for="Fare"></span>
                </div>
                <div class="form-group">
                    <button class="btn btn-success">Save Changes</button> <a asp-action="TrainFares" class="btn btn-primary">Go Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

